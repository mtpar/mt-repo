<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os 
                            http://docs.oasis-open.org/xacml/2.0/access_control-xacml-2.0-policy-schema-os.xsd"
        PolicyId="urn:sedclab:names:tc:xacml:2.0:gpt-tests:policy:age-45-any-action-any-resource"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:permit-overrides"
        Version="1.0">
    <Description>Policy for allowing anyone who is 45 years old to perform any kind of action on any kind of resource</Description>
    <Target>
        <Subjects>
            <Subject>
                <SubjectMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:integer-equal">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">45</AttributeValue>
                    <SubjectAttributeDesignator AttributeId="urn:sedclab:names:tc:xacml:2.0:gpt-tests:subject:age"
                                                DataType="http://www.w3.org/2001/XMLSchema#integer"/>
                </SubjectMatch>
            </Subject>
        </Subjects>
    </Target>
    <Rule RuleId="urn:sedclab:names:tc:xacml:2.0:gpt-tests:rule:permit-age-45-any-action-any-resource"
          Effect="Permit"/>
</Policy>
