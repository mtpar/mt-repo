<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os http://docs.oasis-open.org/xacml/2.0/access_control-xacml-2.0-policy-schema-os.xsd"
        PolicyId="urn:sedclab:names:tc:xacml:2.0:gpt-tests:age-45-policy"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:permit-overrides">

  <Description>Anyone who is 45 integer years old may perform any kind of action on any kind of resource.</Description>

  <Target/>

  <Rule RuleId="urn:sedclab:names:tc:xacml:2.0:gpt-tests:age-45-rule" Effect="Permit">
    <Description>Allow any action on any resource for subjects who are 45 years old</Description>
    <Condition>
      <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-equal">
        <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-one-and-only">
          <SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:subject:age" DataType="http://www.w3.org/2001/XMLSchema#integer"/>
        </Apply>
        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">45</AttributeValue>
      </Apply>
    </Condition>
  </Rule>
</Policy>